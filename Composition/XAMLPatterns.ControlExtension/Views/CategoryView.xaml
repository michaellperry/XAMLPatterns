<UserControl
    x:Class="XAMLPatterns.ControlExtension.Views.CategoryView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:c="clr-namespace:XAMLPatterns.ControlExtension.Controls"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="300">
    <UserControl.Resources>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition
                Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition
                Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <c:IconButton
            Content="User Groups"
            Width="90"
            Height="90"
            Margin="6" Icon="{DynamicResource IconButtons.UserGroup}" />
        <c:IconButton
            Content="Recruiting"
            Grid.Column="1"
            Width="90"
            Height="90"
            Margin="6" Icon="{DynamicResource IconButtons.Recruiting}" />
    </Grid>
</UserControl>
